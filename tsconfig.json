{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "node"
    },
    "include": ["js/**/*"]
} 